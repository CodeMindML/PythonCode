height = input("Enter you height in cms : \n")
weight = input("Enter your weight in KG : \n")

height_meters = float(height)/100
#Coverting to int
height_float = float(height_meters)
weight_float = float(weight)
print(height_meters,height_int, weight_int)

bmi = weight_float / (height_float**2)
bmi_int = int(bmi)

if bmi_int <18.5 :
   print(f"Your BMI is {bmi_int}, you are underweigth")
elif bmi_int < 25 :
   print(f"Your BMI is {bmi_int}, you have a normal weight")
elif bmi_int < 30 :
   print(f"Your BMI is {bmi_int}, you have a slightly over weight")
elif bmi_int < 35 :
   print(f"Your BMI is {bmi_int}, you have a obese")
else:
   print(f"Your BMI is {bmi_int}, you have a clinically obese")

