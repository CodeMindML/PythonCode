# Python Lists

fruits_list = ["Apple", "Banana", "Mango"]
mixed_list = ["abc", 34, True, 40, "male"]

#Loop forward
for fruit in fruits_list :
    print(fruit)

# Print the entire fruits_list
print(fruits_list)

# Access the first element of fruits_list
print(fruits_list[0])

# Print a slice of the fruits_list
print(fruits_list[:3])

# Print the length of fruits_list
print(len(fruits_list))

# Print the mixed_list
print(mixed_list)

# Print the data type of fruits_list and mixed_list
print(type(fruits_list))
print(type(mixed_list))

# Create a new list using the list() constructor
new_list = list(("Apple", "Banana", "Mango"))
print(new_list)

# Check if "Mango" is in the new_list
if "Mango" in new_list:
    print('Mango is in the list')

# Update the first element in new_list
new_list[0] = 'Cherry'
print(new_list)

# Insert "Watermelon" at index 1 in new_list and append at end
new_list.insert(1, "Watermelon")
new_list.append("Orange")
print(new_list)

#Remove a specific item from list
new_list.remove("Orange")
new_List.pop(1)
new_List.pop() #remove last element
del new_List #Delete the list
new_List.clear() # Clear the list

#Reverse a list
list1 = [2, 5, 6, 8, 1, 8, 9, 11]
list1.sort(reverse=True)
print(list1)

#Sort a list
list1 = [2, 5, 6, 8, 1, 8, 9, 11]
list2 = list1.sort(reverse=True)
print(list2)
