# Sum of 2 numbers
first_num = float(input("Enter first number for addition: "))
second_num = float(input("Enter second number for addition: "))
sum_result = first_num + second_num
print(f"Sum: {first_num} + {second_num} = {sum_result}")


# Division
dividend_num = float(input("Enter the dividend for division: "))
divisior_num = float(input("Enter the divisor for division: "))

if divisior_num == 0:
    print("Error: Division by zero not possible.")
else:
    division_result = dividend_num / divisior_num
    print(f"Division: {dividend_num} / {divisior_num} = {division_result}")

#Area of triangle
tri_base = float(input("Enter base of triangle: "))
tri_height = float(input("Enter height of triangle"))
tri_area = 0.5 * tri_base * tri_height

print(f"Area of Tringle : {tri_area}")

#program to swap 2 numbers
Number1 = float(input("Enter 1st Number :"))
Number2 = float(input ("Enter 2nd Number :"))
                
# We can use an additional temp variable by temp = Number1 , Number1 = Number 2 & Number2 = temp               
Number1 , Number2 = Number2, Number1

print(f"Swaping of Numbers : Number1={Number1} & Number2 = {Number2}")


#finding square root of a numbers
import math as MT

Number_forsqrt = float(input("Enter number to find square root :"))

print(f"Square root of Number : {Number_forsqrt} = {MT.sqrt(Number_forsqrt)}")


#Conditional checking +-0
Number_tbc = float(input("Enter number to be checked :"))

if Number_tbc > 0 :
    print("Positive Number.")
elif Number_tbc <0 :
    print("Negative Number.")
else:
    print("Number is Zero.")


#Number is even or odd
Number_EO = float(input("Enter number to be checked :"))

if Number_EO%2 ==0 :
    print("Even Number")
else :
    print("Odd Number")
